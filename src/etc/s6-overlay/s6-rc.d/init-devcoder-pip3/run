#!/usr/bin/with-contenv bash
# shellcheck shell=bash

# Source the echo module
source /etc/s6-overlay/s6-rc.d/echo_module.sh

# Set module name once
set_module_name "init-devcoder-pip3"

say "â–¶ï¸  Start pip3 installer"

export PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:$PATH"

ENV_INSTALL_PIP3_PACKAGES=""
FILE_INSTALL_PIP3_PACKAGES=""
INSTALL_PIP3_PACKAGES_TO_INSTALL=""

run_as_root() {
  if [ "$(id -u)" = "0" ]; then
    "$@"
    return
  fi
  if command -v sudo >/dev/null 2>&1; then
    /usr/bin/sudo -E "$@"
    return
  fi
  if command -v su >/dev/null 2>&1; then
    su -s /bin/bash root -c "$(printf '%q ' "$@")"
    return
  fi
  "$@"
}

run_as_user() {
  if id -u "$TARGET_USER" >/dev/null 2>&1; then
    if [ "$(id -u)" = "$(id -u "$TARGET_USER")" ]; then
      "$@"
      return
    fi
    if command -v sudo >/dev/null 2>&1; then
      /usr/bin/sudo -E -u "$TARGET_USER" env PATH="$PATH" "$@"
      return
    fi
    if command -v su >/dev/null 2>&1; then
      su -s /bin/bash "$TARGET_USER" -c "$(printf '%q ' "$@")"
      return
    fi
    if command -v s6-setuidgid >/dev/null 2>&1; then
      s6-setuidgid "$TARGET_USER" "$@"
      return
    fi
  fi
  "$@"
}

if [ -n "${INSTALL_PIP3_PACKAGES:-}" ]; then
  ENV_INSTALL_PIP3_PACKAGES="${INSTALL_PIP3_PACKAGES//\"/}"
  ENV_INSTALL_PIP3_PACKAGES="${ENV_INSTALL_PIP3_PACKAGES//,/ }"
  INSTALL_PIP3_PACKAGES_TO_INSTALL="$INSTALL_PIP3_PACKAGES_TO_INSTALL $ENV_INSTALL_PIP3_PACKAGES"
fi

TARGET_USER="${CUSTOM_USER:-abc}"
if id "$TARGET_USER" >/dev/null 2>&1; then
  TARGET_UID=$(id -u "$TARGET_USER")
  TARGET_GID=$(id -g "$TARGET_USER")
else
  TARGET_UID=911
  TARGET_GID=911
fi

PIP3_CONFIG_FILE="/config/pip3-system.txt"
if [ -f "$PIP3_CONFIG_FILE" ]; then
  FILE_INSTALL_PIP3_PACKAGES=$(parse_config_file "$PIP3_CONFIG_FILE")
  INSTALL_PIP3_PACKAGES_TO_INSTALL="$INSTALL_PIP3_PACKAGES_TO_INSTALL $FILE_INSTALL_PIP3_PACKAGES"
fi

if [ -z "$INSTALL_PIP3_PACKAGES_TO_INSTALL" ]; then
  say "â—¾ No INSTALL_PIP3_PACKAGES configured; skipping."
  exit 0
fi

INSTALL_PIP3_PACKAGES_TO_INSTALL=$(printf "%s" "$INSTALL_PIP3_PACKAGES_TO_INSTALL" | tr ',\n\r\t' '    ' | xargs)
say "ðŸ“¦ Installing pip3 system packages: $INSTALL_PIP3_PACKAGES_TO_INSTALL"

# Configure pip to allow system packages
mkdir -p ~/.config/pip
printf "[global]\nbreak-system-packages = true\n" > ~/.config/pip/pip.conf
say "âœ… pip configured to allow system packages"

if ! command -v pip3 >/dev/null 2>&1; then
  say "âš ï¸  pip3 not found; skipping pip3 installs."
  exit 0
fi

for pkg in $INSTALL_PIP3_PACKAGES_TO_INSTALL; do
  if pip3 show "$pkg" >/dev/null 2>&1; then
    say "â—¾  $pkg is already installed, skipping..."
  else
    say "pip3 install $pkg"
    if ! run_as_user pip3 install "$pkg"; then
      say "âš ï¸ warn: failed to install $pkg (continuing)" >&2
    fi
  fi
done
